[core]
    excludesfile = $HOME/.gitignore
[user]
    name = Paul Roberts
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meldGit "$LOCAL" "$REMOTE"
[color]
    ui = auto
[format]
    pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
    tool = meld
[mergetool]
    keepBackup = false
[mergetool "meld"]
    cmd = meldGit "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[include]
    path = ~/.gitconfig_local
[push]
    default = simple
[alias]
    meld = !git difftool --dir-diff
[init]
    defaultBranch = main
[fetch]
    prune = true
    pruneTags = true
