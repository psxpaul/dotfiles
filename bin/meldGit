#!/bin/bash

MELD_PATH=/usr/bin/meld

if [ -e /usr/local/bin/meld ]
then
    MELD_PATH=/usr/local/bin/meld
fi

if [ -e $HOME/bin/meld ]
then
    MELD_PATH=$HOME/bin/meld
fi

if [ -e /Applications/Meld.app/Contents/MacOS/Meld ]
then
    MELD_PATH=/Applications/Meld.app/Contents/MacOS/Meld
fi

$MELD_PATH $@
